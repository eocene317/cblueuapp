<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <FrameLayout
        android:id="@+id/fl_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/iv_playing"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_playing"
            android:tint="@color/icon_tint"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_album_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/iv_download"
        android:layout_toRightOf="@id/fl_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text1"
        android:textSize="15sp"
        tools:text="不要说话" />

    <TextView
        android:id="@+id/tv_singer_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_download"
        android:layout_toRightOf="@id/fl_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text2"
        android:textSize="12sp"
        tools:text="陈奕迅 - 不想放手" />

    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:src="@drawable/ic_music_download"
        android:tint="@color/icon_tint" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/tv_singer_album"
        android:background="@color/line" />

</RelativeLayout>